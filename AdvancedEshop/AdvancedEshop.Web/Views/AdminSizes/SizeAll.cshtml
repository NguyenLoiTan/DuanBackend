@model List<AdvancedEshop.Web.API.Models.Size>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Sizes</title>
    <!-- Add Bootstrap CSS link here -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <!-- Add your custom styles here -->
    <style>
        body {
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
        }

        th {
            background-color: #007bff;
            color: #fff;
        }

        button {
            background-color: #007bff;
            color: #fff;
            padding: 6px 12px;
            border: none;
            cursor: pointer;
        }

            button:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <br>
    <h2 class="text-center">All Sizes</h2>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var size in Model)
            {
                <tr>
                    <td>@size.SizeId</td>
                    <td>@size.SizeName</td>
                    <td>
                        <form asp-controller="AdminSizes" asp-action="SizeDetails" method="get">
                            <input type="hidden" name="id" value="@size.SizeId" />
                            <button type="submit" class="btn btn-primary">Details</button>
                        </form>
                    </td>
                    <td>
                        <form asp-controller="AdminSizes" asp-action="EditSize" method="get">
                            <input type="hidden" name="id" value="@size.SizeId" />
                            <button type="submit" class="btn btn-warning">Edit</button>
                        </form>
                    </td>
                    <td>
                        <form asp-controller="AdminSizes" asp-action="DeleteSize" method="post" onsubmit="return confirm('Are you sure you want to delete this size?');">
                            <input type="hidden" name="id" value="@size.SizeId" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }

            <tr>
                <td colspan="5">
                    <form asp-controller="AdminSizes" asp-action="CreateSize" method="get">
                        <button type="submit" class="btn btn-success">Create Size</button>
                    </form>
                </td>
            </tr>
        </tbody>
    </table>

    <!-- Add Bootstrap JS and Popper.js script links here -->
 @*   <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>*@
</body>
</html>

@model AdvancedEshop.Web.API.Models.Size

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Size</title>
    <!-- Add Bootstrap CSS link here -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <!-- Add your custom styles here -->
    <style>
        body {
            padding: 20px;
        }

        form {
            max-width: 400px;
            margin: auto;
        }

        label {
            font-weight: bold;
        }

        input {
            width: 100%;
            margin-bottom: 15px;
            padding: 10px;
            box-sizing: border-box;
        }

        button {
            background-color: #007bff;
            color: #fff;
            padding: 10px 15px;
            border: none;
            cursor: pointer;
        }

            button:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <br>
    <h2 class="text-center">Edit Size</h2>

    <form asp-controller="AdminSizes" asp-action="UpdateSize" method="post">
        <div class="form-group">
            <label asp-for="SizeName"></label>
            <input asp-for="SizeName" class="form-control" />
            <span asp-validation-for="SizeName" class="text-danger"></span>
        </div>

        <!-- Thêm trường ẩn cho SizeId -->
        <input type="hidden" asp-for="SizeId" />

        <button type="submit" class="btn btn-primary btn-block">Save Changes</button>
    </form>

    <form asp-controller="AdminSizes" asp-action="SizeAll" class="mt-3">
        <button type="submit" class="btn btn-secondary btn-block">Back</button>
    </form>

    <!-- Add Bootstrap JS and Popper.js script links here -->
@*    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>*@
</body>
</html>

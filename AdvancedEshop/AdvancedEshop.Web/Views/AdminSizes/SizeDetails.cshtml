@model AdvancedEshop.Web.API.Models.Size

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Size Details</title>
    <!-- Add Bootstrap CSS link here -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <!-- Add your custom styles here -->
    <style>
        body {
            padding: 20px;
        }

        div {
            margin-bottom: 20px;
        }

        p {
            margin-bottom: 10px;
        }

        button {
            background-color: #007bff;
            color: #fff;
            padding: 10px 15px;
            border: none;
            cursor: pointer;
        }

            button:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <br>
    <h3 class="text-center">Size Details</h3>

    @if (Model != null)
    {
        <div>
            <p><strong>Name:</strong> @Model.SizeName</p>
            <!-- Thêm các thông tin khác của Size -->
        </div>
        <form asp-controller="AdminSizes" asp-action="EditSize" method="get">
            <input type="hidden" name="id" value="@Model.SizeId" />
            <button type="submit" class="btn btn-primary">Edit</button>
        </form>
        <form asp-controller="AdminSizes" asp-action="SizeAll" method="get">
            <button type="submit" class="btn btn-secondary">Back</button>
        </form>
    }
    else
    {
        <p>Size not found.</p>
    }

    <!-- Add Bootstrap JS and Popper.js script links here -->
    @*<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>*@
</body>
</html>

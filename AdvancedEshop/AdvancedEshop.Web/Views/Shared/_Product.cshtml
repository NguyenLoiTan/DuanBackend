@model AdvancedEshop.Web.API.Models.Product

<div class="col-lg-3 col-md-6 col-sm-12 pb-1">
    <div class="card product-item border-0 mb-4">
        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
            <img class="img-fluid w-100" src="@Model.ProductPhoto" alt="">
        </div>
        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
            <h6 class="text-truncate mb-3">@Model.ProductName</h6>
            <div class="d-flex justify-content-center">
                <h6>$@(Model.ProductDiscount * (1 - Model.ProductPrice))</h6><h6 class="text-muted ml-2"><del>$@Model.ProductPrice</del></h6>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between bg-light border">
            
           @*  <a href="/Products/Details/@Model.ProductId" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a> *@
            <a href="@Url.Action("Details", "Products", new { id = Model.ProductId })" class="btn btn-sm text-dark p-0">
                <i class="fas fa-eye text-primary mr-1"></i>View Detail
            </a>


            @* <a href="/Cart/AddToCart/@Model.ProductId" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a> *@
            @* <a href="@Url.Action("AddToCart", "Cart", new { id = Model.ProductId })" class="btn btn-sm text-dark p-0">
                <i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart
            </a>

            <form id="@Model.ProductId" asp-page="/Cart" method="post">
                <input type="hidden" asp-for="ProductId" />
                <input type="hidden" name="returnUrl"
                       value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                <span class="card-text p-1">
                    @Model.ProductId
                    <button type="submit" style="float:right"
                            class="btn btn-success btn-sm pull-right">
                        Add To Cart
                    </button>
                </span>
            </form> *@
            <form id="@Model.ProductId" asp-page="/Cart" method="post" style="display:inline;">
                <input type="hidden" asp-for="ProductId" />
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                <button type="submit" class="btn btn-sm text-dark p-0 ml-2">
                    <i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart
                </button>
            </form>




        </div>
    </div>
</div>
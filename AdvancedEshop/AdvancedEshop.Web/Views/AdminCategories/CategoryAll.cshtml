@model List<AdvancedEshop.Web.API.Models.Category>

<h2>All Categories</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Order</th>
            <!-- Thêm các cột khác nếu cần -->
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>
                    <img src="@category.CategoryDescription" alt="Category Description" style="max-width: 100px; max-height: 100px;" />
                </td>
                <td>@category.CategoryOrder</td>
                <td>
                    <form asp-controller="AdminCategories" asp-action="CategoryDetails" method="get">
                        <input type="hidden" name="id" value="@category.CategoryId" />
                        <button type="submit">Details</button>
                    </form>
                </td>
                <td>
                    <form asp-controller="AdminCategories" asp-action="EditCategory" method="get">
                        <input type="hidden" name="id" value="@category.CategoryId" />
                        <button type="submit">Edit</button>
                    </form>
                </td>
                <td>
                    <form asp-controller="AdminCategories" asp-action="DeleteCategory" method="post" onsubmit="return confirm('Are you sure you want to delete this category?');">
                        <input type="hidden" name="id" value="@category.CategoryId" />
                        <button type="submit">Delete</button>
                    </form>
                </td>
                <!-- Thêm các trường dữ liệu khác nếu cần -->
            </tr>
        }

        <form asp-controller="AdminCategories" asp-action="CreateCategory" method="get">
            <button type="submit">Create Category</button>
        </form>
    </tbody>
</table>

@model Order


    <!-- Checkout Start -->
@* <div asp-validation-summary="All" class="text-danger"></div> *@
<form asp-action="Checkout" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="container-fluid pt-5">
        <div class="row px-xl-5">
            <div class="col-lg-8">
                <div class="mb-4">
                    <h4 class="font-weight-semi-bold mb-4">Billing Address</h4>
                    <div class="row">
                       
                        <div class="col-md-6 form-group">
                            <label>Họ</label>
                            <input class="form-control" asp-for="FirstName" placeholder="John">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Tên</label>
                            <input class="form-control" asp-for="LastName" placeholder="Doe">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Email</label>
                            <input class="form-control" asp-for="Email" placeholder="example@email.com">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Số điện thoại</label>
                            <input class="form-control" asp-for="MobileNumber" placeholder="+123 456 789">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Địa chỉ 1</label>
                            <input class="form-control" asp-for="AddressLine1" placeholder="123 Đường">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Địa chỉ 2</label>
                            <input class="form-control" asp-for="AddressLine2" placeholder="123 Đường">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Quốc gia</label>
                            <select class="custom-select" asp-for="Country">
                                <option selected>United States</option>
                                <option>Afghanistan</option>
                                <option>Albania</option>
                                <option>Algeria</option>
                            </select>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Thành phố</label>
                            <input class="form-control" asp-for="City" placeholder="New York">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Tỉnh/Thành phố</label>
                            <input class="form-control" asp-for="State" placeholder="New York">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Mã ZIP</label>
                            <input class="form-control" asp-for="ZipCode" placeholder="123">
                        </div>
                        <div class="col-md-12 form-group">
                            @* <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" asp-for="CreateAccount" id="newaccount">
                                <label class="custom-control-label" for="newaccount">Tạo tài khoản</label>
                            </div> *@
                        </div>
                    </div>
                </div>
                
            </div>
            <div class="col-lg-4">
                <div class="card border-secondary mb-5">
                    <div class="card-header bg-secondary border-0">
                        <h4 class="font-weight-semi-bold m-0">Order Total</h4>
                    </div>
                    <div class="card-body">
                        <h5 class="font-weight-medium mb-3">Products</h5>

                        @* @foreach (var line in Model.Lines)
                        {
                            <div class="d-flex justify-content-between">
                                <p>@line.Product.ProductName</p>
                                <p>@(line.Product.ProductPrice * (1 - line.Product.ProductDiscount)).ToString("C")</p>
                            </div>
                        }
                        <hr class="mt-0">

                        <div class="d-flex justify-content-between mb-3 pt-1">
                            <h6 class="font-weight-medium">Subtotal</h6>
                            <h6 class="font-weight-medium">
                                @{
                                    decimal subtotal = Model.Lines.Sum(line => line.Product.ProductPrice * (1 - line.Product.ProductDiscount) * line.Quantity).GetValueOrDefault();
                                    @subtotal.ToString("C")
                                }
                            </h6>
                        </div>


                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Shipping</h6>
                            <h6 class="font-weight-medium">@Model.Cart.ShippingCost.ToString("C")</h6>
                        </div>
                    </div>
                    <div class="card-footer border-secondary bg-transparent">
                        <div class="d-flex justify-content-between mt-2">
                            <h5 class="font-weight-bold">Total</h5>
                            @{
                                decimal total = Model.Cart.ComputeTotalValue() + Model.Cart.ShippingCost;
                                @total.ToString("C")
                            }
                        </div> *@

                    </div>
                </div>
                <div class="card border-secondary mb-5">
                    <div class="card-header bg-secondary border-0">
                        <h4 class="font-weight-semi-bold m-0">Payment</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" name="payment" id="paypal">
                                <label class="custom-control-label" for="paypal">Paypal</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" name="payment" id="directcheck">
                                <label class="custom-control-label" for="directcheck">Direct Check</label>
                            </div>
                        </div>
                        <div class="">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" name="payment" id="banktransfer">
                                <label class="custom-control-label" for="banktransfer">Bank Transfer</label>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer border-secondary bg-transparent">
                        <input class="btn btn-lg btn-block btn-primary font-weight-bold my-3 py-3" type="submit"
                               value="Place Order" />
                       @*  <button class="btn btn-lg btn-block btn-primary font-weight-bold my-3 py-3">Place Order</button> *@
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
    <!-- Checkout End -->
    
@model AdvancedEshop.Web.API.Models.Product

<h2>Create Product</h2>

<form asp-controller="Admin" asp-action="SaveProduct" method="post">
    <!-- Các trường dữ liệu để nhập thông tin sản phẩm -->
    <div>
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" />
        <span asp-validation-for="ProductName"></span>
    </div>

    <div>
        <label asp-for="ProductDescription"></label>
        <textarea asp-for="ProductDescription"></textarea>
        <span asp-validation-for="ProductDescription"></span>
    </div>

    <div>
        <label asp-for="CategoryId"></label>
        @if (ViewBag.Categories != null)
        {
            <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "CategoryName"))">
                <option value="">-- Select Category --</option>
            </select>
        }
        else
        {
            <span>Categories are not available.</span>
        }
        <span asp-validation-for="CategoryId"></span>
    </div>

    <div>
        <label asp-for="ProductPrice"></label>
        <input asp-for="ProductPrice" />
        <span asp-validation-for="ProductPrice"></span>
    </div>

    <div>
        <label asp-for="ProductDiscount"></label>
        <input asp-for="ProductDiscount" />
        <span asp-validation-for="ProductDiscount"></span>
    </div>

    <div>
        <label asp-for="ProductPhoto"></label>
        <input asp-for="ProductPhoto" />
        <span asp-validation-for="ProductPhoto"></span>
    </div>

    <div>
        <label asp-for="SizeId"></label>
        @if (ViewBag.Sizes != null)
        {
            <select asp-for="SizeId" asp-items="@(new SelectList(ViewBag.Sizes, "SizeId", "SizeName"))">
                <option value="">-- Select Size --</option>
            </select>
        }
        else
        {
            <span>Sizes are not available.</span>
        }
        <span asp-validation-for="SizeId"></span>
    </div>

    <div>
        <label asp-for="ColorId"></label>
        @if (ViewBag.Colors != null)
        {
            <select asp-for="ColorId" asp-items="@(new SelectList(ViewBag.Colors, "ColorId", "ColorName"))">
                <option value="">-- Select Color --</option>
            </select>
        }
        else
        {
            <span>Colors are not available.</span>
        }
        <span asp-validation-for="ColorId"></span>
    </div>

    <div>
        <label asp-for="IsTrandy"></label>
        <input asp-for="IsTrandy" type="checkbox" />
        <span asp-validation-for="IsTrandy"></span>
    </div>

    <div>
        <label asp-for="IsArrived"></label>
        <input asp-for="IsArrived" type="checkbox" />
        <span asp-validation-for="IsArrived"></span>
    </div>

    <!-- Thêm các trường khác tương tự -->

    <button type="submit">Create</button>

    
</form>
<form asp-controller="Admin" asp-action="ProductAll">
    <button type="submit">Back</button>
</form>
